<?xml version="1.0" encoding="utf-8"?>
<com.example.xingxiaogang.animationdemo.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragContentId="@+id/item_container">


    <TextView
        android:id="@+id/swipe_back_text"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|end"
        android:background="@color/text_444444_alpha10"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/text_444444_alpha50"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:text="title"
                android:textColor="@color/text_444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:focusableInTouchMode="false"
                android:text="this is an item"
                android:textColor="@color/text_444"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>
</com.example.xingxiaogang.animationdemo.view.SwipeItemLayout>
