<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11666666">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FEFFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <FrameLayout
                    android:id="@+id/icon_frame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp">

                    <com.example.xingxiaogang.animationdemo.view.ReduceRadarView
                        android:id="@+id/icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/radar_bg" />

                    <ImageView
                        android:id="@+id/small_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|bottom"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_frame"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="#444"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/icon_frame"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="#7f444444"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <com.example.xingxiaogang.animationdemo.view.ReduceRadarView
                android:id="@+id/icon_big"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/radar_bg" />

            <ImageView
                android:id="@+id/loading_icon"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="开始" />

            <Button
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="平滑中断" />

            <Button
                android:id="@+id/loading_window"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="弹窗" />

        </LinearLayout>


    </ScrollView>

</FrameLayout>